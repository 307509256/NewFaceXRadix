<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="490dp">


    <LinearLayout
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="@dimen/btn_key_margin"
            android:id="@+id/btn1A"
            android:layout_width="@dimen/btn_key_size"
            android:layout_height="@dimen/btn_key_size"
            android:background="@drawable/selector_btn_circle"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text" />

        <Button
            android:layout_margin="@dimen/btn_key_margin"
            android:id="@+id/btn2B"
            android:layout_width="@dimen/btn_key_size"
            android:layout_height="@dimen/btn_key_size"
            android:background="@drawable/selector_btn_circle"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="@dimen/text" />

        <Button
            android:layout_margin="@dimen/btn_key_margin"
            android:id="@+id/btn3C"
            android:layout_width="@dimen/btn_key_size"
            android:layout_height="@dimen/btn_key_size"
            android:background="@drawable/selector_btn_circle"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="@dimen/text" />

        <Button
            android:layout_margin="@dimen/btn_key_margin"
            android:id="@+id/btn4D"
            android:layout_width="@dimen/btn_key_size"
            android:layout_height="@dimen/btn_key_size"
            android:background="@drawable/selector_btn_circle"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="@dimen/text"/>

        <Button
            android:layout_margin="@dimen/btn_key_margin"
            android:id="@+id/btn5E"
            android:layout_width="@dimen/btn_key_size"
            android:layout_height="@dimen/btn_key_size"
            android:background="@drawable/selector_btn_circle"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="@dimen/text" />
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn6F"
            android:layout_margin="@dimen/btn_key_margin"
            android:layout_width="@dimen/btn_key_size"
            android:layout_height="@dimen/btn_key_size"
            android:background="@drawable/selector_btn_circle"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="@dimen/text" />


        <Button
            android:id="@+id/btn7G"
            android:layout_margin="@dimen/btn_key_margin"
            android:layout_width="@dimen/btn_key_size"
            android:layout_height="@dimen/btn_key_size"
            android:background="@drawable/selector_btn_circle"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="@dimen/text" />

        <Button
            android:id="@+id/btn8H"
            android:layout_margin="@dimen/btn_key_margin"
            android:layout_width="@dimen/btn_key_size"
            android:layout_height="@dimen/btn_key_size"
            android:background="@drawable/selector_btn_circle"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="@dimen/text"/>


        <Button
            android:id="@+id/btn9I"
            android:layout_width="@dimen/btn_key_size"
            android:layout_height="@dimen/btn_key_size"
            android:layout_margin="@dimen/btn_key_margin"
            android:background="@drawable/selector_btn_radius"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="@dimen/text"/>

        <Button
            android:id="@+id/btn0J"
            android:layout_width="@dimen/btn_key_size"
            android:layout_height="@dimen/btn_key_size"
            android:background="@drawable/selector_btn_circle"
            android:text="0"
            android:layout_margin="@dimen/btn_key_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/text"/>


    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="180dp"
            android:layout_height="95dp"
            android:background="@drawable/selector_btn_radius"
            android:text="*"
            android:layout_margin="20dp"
            android:textColor="@color/black"
            android:textSize="55sp" />

        <Button
            android:id="@+id/btnSure"
            android:layout_width="180dp"
            android:layout_height="95dp"
            android:background="@drawable/selector_btn_radius"
            android:text="#"
            android:layout_margin="20dp"
            android:textColor="@color/black"
            android:textSize="55sp" />


    </LinearLayout>


</LinearLayout>